{# src/LO/PlatformBundle/Resources/views/layout.html.twig #}

<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="favicon.ico">

    {%  block stylesheet %}
        <!-- Bootstrap core CSS -->
        <link href="{{ absolute_url(asset('css/bootstrap.min.css')) }}" type="text/css" rel="stylesheet">
        <!-- CSS -->
        <link href="{{ absolute_url(asset('style.css')) }}" type="text/css" rel="stylesheet">
        <!-- jQuery-UI CSS-->
        <link href="{{ absolute_url(asset('web/js/jquery-ui/jquery-ui.css')) }}" type="text/css">
    {% endblock %}

</head>


<body>

<nav class="navbar navbar-expand-md navbar-dark  fixed-top">
    <img src="{{ absolute_url(asset('images/logo.png')) }}" alt="Logo louvre">
    <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="#">Accueil <span class="sr-only">(current)</span></a>
            </li>
        </ul>
        <div class="pull-right">
            <a href="{{ path("lo_platform_homepage", {"_locale":"fr"}) }}">
                <img src="{{ absolute_url(asset('images/fr.png')) }}" alt="drapeau Français">
            </a>
            <a href="{{ path("lo_platform_homepage", {"_locale":"en"}) }}">
                <img src="{{ absolute_url(asset('images/gb.png')) }}" alt="drapeau Anglais">
            </a>

        </div>
    </div>
</nav>


<!-- Partie principale de la page d'accueil -->
<main role="main" class="container" style="margin-top:80px;">

    {% block content %}

    {% endblock %}




</main><!-- main Fin container -->
<br />




    {% block footer %}
        <div class="container-fluide">
            <div class="footer">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="footer-copyright">

                            <a href="#">Administration</a>
                            <p>Copyright moi - Année 2017, tous droits réservés</p>

                        </div>	<!-- footer-copyright -->
                    </div>	<!--col-lg-12 -->
                </div> <!-- row -->
            </div>	<!-- footer -->
        </div> <!-- Container -->
    {% endblock %}

    {% block javascripts %}
        <!-- Bootstrap core JavaScript
         ================================================== -->
        <!-- Placed at the end of the document so the pages load faster -->
        <script src="{{ asset('js/jquery.js') }}"></script>
        <script src="{{ asset('js/popper.min.js') }}"></script>
        <script src="{{ absolute_url(asset('js/bootstrap.min.js')) }}"></script>
    {% endblock %}


</body>

</html>

